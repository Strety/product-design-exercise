<%= turbo_frame_tag dom_id(post, :bookmark) do %>
  <% if post.bookmarks.any? %>
    <%= button_to post_bookmark_path(post), method: :delete, class: "btn btn-link text-warning p-0" do %>
      <i class="bi bi-bookmark-fill fs-5"></i>
    <% end %>
  <% else %>
    <%= button_to post_bookmark_path(post), method: :post, class: "btn btn-link text-muted p-0" do %>
      <i class="bi bi-bookmark fs-5"></i>
    <% end %>
  <% end %>
<% end %>
