<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Posts</h1>
  <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
</div>

<div class="row g-4">
  <% @posts.each do |post| %>
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="card-title mb-1"><%= link_to post.title, post, class: "text-decoration-none" %></h5>
              <p class="card-text text-muted"><%= truncate(post.body, length: 200) %></p>
              <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
            </div>
            <%= render "posts/bookmark_button", post: post %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
