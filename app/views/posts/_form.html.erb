<%= form_with(model: post, class: "mb-3") do |form| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul class="mb-0">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control", rows: 8 %>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
